<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/summary_full_height_bottom_sheet"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/extend_button_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_up"/>

    <include layout="@layout/summary"/>

    <TextView
        android:id="@+id/summary_extended_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/summary_peek_height_bottom_sheet"
        android:text="Temp Bottom Sheet message"
        android:background="@android:color/white"/>
</LinearLayout>